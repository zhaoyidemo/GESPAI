# Database (Railway PostgreSQL)
DATABASE_URL="postgresql://username:password@host:port/database?schema=public"

# NextAuth
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="https://gesp.ai"

# Claude API (Anthropic)
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Judge0 API (RapidAPI)
JUDGE0_API_URL="https://judge0-ce.p.rapidapi.com"
JUDGE0_API_KEY="your-rapidapi-key"

# 讯飞语音识别（可选，不配置则使用浏览器 Web Speech API）
NEXT_PUBLIC_IFLYTEK_ENABLED=true
NEXT_PUBLIC_IFLYTEK_APP_ID=your_app_id
IFLYTEK_API_KEY=your_api_key
IFLYTEK_API_SECRET=your_api_secret

# 飞书群机器人 Webhook（可选，分心超过 60 秒通知家长）
FEISHU_WEBHOOK_URL="https://open.feishu.cn/open-apis/bot/v2/hook/your-hook-id"

# App Config
JUDGE_TIMEOUT=5000
JUDGE_MEMORY_LIMIT=256
